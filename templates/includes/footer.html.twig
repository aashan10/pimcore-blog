<div class="container">
    <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-5 my-5 border-top">
        <div class="col col-2 mb-3" style="flex: 2">
            <a href="/" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
                Pimcore Blog
            </a>
            <p class="text-muted">{{ pimcore_input('copyright_info', {
                    placeholder: 'Copyright information',
                }) }}</p>
        </div>


        <div class="col mb-3">
            {% set navigation_footer_links = pimcore_block('footer_links') %}
            <h5>Navigation</h5>
            <ul class="nav flex-column">
                {% for i in navigation_footer_links.iterator %}
                    {% set link = pimcore_link('footer_link') %}

                    {% if editmode %}
                        {{ link | raw }}
                    {% else %}
                        <li class="nav-item mb-2">
                            <a target="{{ link.target }}" href="{{ link.href }}"
                               class="nav-link p-0 text-muted">{{ link.text }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>

        </div>

        <div class="col mb-3">
            {% set useful_links = pimcore_block('useful_links') %}
            <h5>Useful Links</h5>
            <ul class="nav flex-column">
                {% for i in useful_links.iterator %}
                    {% set link = pimcore_link('footer_link') %}

                    {% if editmode %}
                        {{ link | raw }}
                    {% else %}
                        <li class="nav-item mb-2">
                            <a target="{{ link.target }}" href="{{ link.href }}"
                               class="nav-link p-0 text-muted">{{ link.text }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="col md-3">
            {{ pimcore_input('company_address', {
                placeholder: 'Company Address',
            }) }}
        </div>
    </footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
