{% if post is not empty %}

    {% set banner = post.banner.getThumbnail({
        height: 300,
        width: 300,
        imgAttribute: {
            class: 'img-fluid card-img-top'
        }
    }) %}
    {% set title = post.title %}
    {% set teaser = post.teaserText %}
    {% set link =  '/' ~ post.slug %}

    <div class="card d-flex flex-row mb-4">
        <a href="{{ link }}">
            {{ banner.html | raw }}
        </a>
        <div class="card-body d-flex justify-content-center flex-column flex-grow-1">
            <div class="small text-muted">{{ post.creationDate|date('F j, Y') }}</div>
            <h2 class="card-title h4">{{ title }}</h2>
            <p class="card-text">{{ teaser }}</p>
            <div>
                <a class="btn btn-primary" href="{{ link }}">Read more â†’</a>
            </div>
        </div>
    </div>
{% else %}
    There was an issue with your submission, please try again.
{% endif %}